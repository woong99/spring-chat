pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'gradle --version'
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}